<h1>Busca de Receitas</h1>

<%= form_tag(search_recipes_path, method: :get) do %>
  
   <%= label_tag(:q, "Procurar por:") %>
   <%= text_field_tag(:q) %>
   <%= submit_tag("Buscar") %>
  
<% end %>

<% if defined?(@recipes) %>
  
  <h2>Total de Receitas encontradas: <%= @recipes.count %></h2>
  <ul>
    <% @recipes.each do |recipe| %>
      <li><%= link_to recipe.title, recipe %>
    <% end %>
  </ul>
  
<% end %>

<p><%= link_to 'Voltar', root_path %></p>