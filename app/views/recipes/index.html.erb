<h1>CookBook</h1>

<p>Bem-vindo ao maior livro de receitas online</p>

<% if user_signed_in? %>
  <%= link_to 'Cadastrar nova Receita', new_recipe_path %>
<% end %>
<%= link_to 'Cadastrar novo Tipo de Receita', new_recipe_type_path %>
<%= link_to 'Cadastrar nova Cozinha', new_cuisine_path %>

<%= link_to 'Buscar uma Receita', search_recipes_path %>

<ul>
  <% @recipes.each do |recipe| %>
    <h1>
      <%= link_to recipe.title, recipe %>
    </h1>
    
    <li><%= recipe.recipe_type.name %></li>
    <li><%= recipe.cuisine.name %></li>
    <li><%= recipe.difficulty %></li>
    <li><%= recipe.cook_time_min %></li>
  <% end %>
</ul>