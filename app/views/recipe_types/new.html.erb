<h1>Cadastro de Tipos de Receita</h1>

<% if @recipe_type.errors.any? %>
  
  <h2>Não foi possível salvar o Tipo de Receita</h2>
  <% @recipe_type.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
  
<% end %>

<%= form_for @recipe_type do |f| %>
  
  <%= f.label :name, 'Nome' %>
  <%= f.text_field :name %>

  <%= f.submit 'Enviar' %>

<% end %>

<p><%= link_to 'Voltar', root_path %></p>