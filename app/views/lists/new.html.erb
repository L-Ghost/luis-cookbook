<h1>Adicionar Listas</h1>

<% if @list.errors.any? %>
  
  <h2>Não foi possível salvar a Lista</h2>
  <% @list.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
  
<% end %>

<%= form_for @list do |f| %>
  <%= f.label :name, 'Nome' %>
  <%= f.text_field :name %>
  <%= f.submit 'Enviar' %>
<% end %>